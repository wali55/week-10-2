generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int     @id @default(autoincrement())
  email             String  @unique
  password          String
  firstName         String?
  lastName          String?
  todos             Todo[]
}

model Todo {
  id                Int     @id @default(autoincrement())
  title             String
  description       String?
  done              Boolean @default(false)
  user              User    @relation(fields: [userId], references: [id])
  userId            Int
}